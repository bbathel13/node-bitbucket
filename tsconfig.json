{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./src",
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": true
  },
  "include": ["lib", "src", "types"]
}
